@model FxUserCenter.Models.TopShowModel
@{
    ViewBag.Title = "置顶信息";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="#">用户中心</a> <span class="divider">/</span>
        </li>
        <li>
            <a href="#">置顶信息</a>
        </li>
    </ul>
</div>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-user"></i>您发布的车辆求购</h2>
            <div class="box-icon">
                <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
                <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>类别</th>
                        <th>标题</th>
                        <th>发布日期</th>
                        <th>图片首页URL地址----如果存在请自行添加域名地址(如：<a href="#">http://yingtao.co.uk/</a></th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TopShows)
                    {
                        <tr>
                            <td>@FxUserCenter.Helper.GetEnumDescription((Fx.Entity.ChannelCatagroy)item.ChannelCatagroy)</td>
                            <td>@item.Title</td>
                            <td class="center">@item.CreatedTime.ToString("yy/MM/dd")</td>
                            <td>@item.HeadPicture</td>
                            <td class="center">
                                <a class="btn btn-success" href="#">
                                    <i class="icon-zoom-in icon-white"></i>
                                    查看                                            
                                </a>
                                <a class="btn btn-danger" href="/Admin/CancleTopShow?page=@item.TopShowId"  target="_blank">
                                    <i class="icon-edit icon-white"></i>
                                    取消置顶                                            
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/span-->

</div>

