@model List<Fx.Entity.FxHouse.HouseBuyInfo>
@{
    ViewBag.Title = "房屋求购管理";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="#">用户中心</a> <span class="divider">/</span>
        </li>
        <li>
            <a href="#">房屋求购</a>
        </li>
    </ul>
</div>

<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-user"></i>您发布的房屋求购</h2>
            <div class="box-icon">
                <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
                <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
               <thead>
                    <tr>
                        <th>标题</th>
                        <th>发布日期</th>
                        <th>发布者</th>
                        <th>发布状态</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PublishTitle</td>
                            <td class="center">@item.CreatedTime.ToString("yy/MM/dd")</td>
                            <td class="center">@item.UserAccount</td>
                            <td class="center">
                                <span class="label label-success">
                                    @FxUserCenter.Helper.GetEnumDescription((Fx.Entity.ProcessState)item.InfoProcessState)
                                </span>
                            </td>
                            <td class="center">
                                <a class="btn btn-success" href="@FxUserCenter.AppSettings.HouseBuyLink(item.HouseBuyInfoId)">
                                    <i class="icon-zoom-in icon-white"></i>
                                    查看                                            
                                </a>
                               
                                <a class="btn btn-info" href="/Admin/HouseBuyTopShow?page=@item.HouseBuyInfoId"  target="_blank">
                                    <i class="icon-edit icon-white"></i>
                                    置顶                                            
                                </a>

                                <a class="btn btn-danger" href="/Admin/HouseBuyDelete?id=@item.HouseBuyInfoId">
                                    <i class="icon-trash icon-white"></i>
                                    删除
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/span-->

</div>
