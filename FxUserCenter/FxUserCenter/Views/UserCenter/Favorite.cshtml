@model List<Fx.Entity.FxAggregate.Favorite>
@{
    ViewBag.Title = "收藏管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="#">用户中心</a> <span class="divider">/</span>
        </li>
        <li>
            <a href="#">收藏</a>
        </li>
    </ul>
</div>


<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-user"></i>收藏</h2>
            <div class="box-icon">
                <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
                <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>标题</th>
                        <th>频道</th>
                        <th>日期</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>
                                @FxUserCenter.Helper.GetEnumDescription((Fx.Entity.ChannelCatagroy)item.ChannelCatagroy)
                            </td>
                            <td>@item.CreatedTime.ToString("yy/MM/dd")</td>
                            <td>
                                <a class="btn btn-danger" href="/UserCenter/FavoriteDelete?id=@item.FavoriteId">
                                    <i class="icon-trash icon-white"></i>
                                    删除
                                </a>
                                @if (item.ChannelCatagroy == (int)Fx.Entity.ChannelCatagroy.FxCarBuy)
                                {
                                    <a class="btn btn-success" href="@FxUserCenter.AppSettings.CarBuyLink(item.InfoId)">
                                        <i class="icon-zoom-in icon-white"></i>
                                        查看                                            
                                    </a>
                                    continue;
                                }
                                 @if (item.ChannelCatagroy == (int)Fx.Entity.ChannelCatagroy.FxCarTransfer)
                                {
                                    <a class="btn btn-success" href="@FxUserCenter.AppSettings.CarTransferLink(item.InfoId)">
                                        <i class="icon-zoom-in icon-white"></i>
                                        查看                                            
                                    </a>
                                    continue;
                                }
                                 @if (item.ChannelCatagroy == (int)Fx.Entity.ChannelCatagroy.FxGoodsBuy)
                                {
                                    <a class="btn btn-success" href="@FxUserCenter.AppSettings.GoodsBuyLink(item.InfoId)">
                                        <i class="icon-zoom-in icon-white"></i>
                                        查看                                            
                                    </a>
                                    continue;
                                }
                                 @if (item.ChannelCatagroy == (int)Fx.Entity.ChannelCatagroy.FxGoodsTransfer)
                                {
                                    <a class="btn btn-success" href="@FxUserCenter.AppSettings.GoodsTransferLink(item.InfoId)">
                                        <i class="icon-zoom-in icon-white"></i>
                                        查看                                            
                                    </a>
                                    continue;
                                }
                                 @if (item.ChannelCatagroy == (int)Fx.Entity.ChannelCatagroy.FxHouseBuy)
                                {
                                    <a class="btn btn-success" href="@FxUserCenter.AppSettings.HouseBuyLink(item.InfoId)">
                                        <i class="icon-zoom-in icon-white"></i>
                                        查看                                            
                                    </a>
                                    continue;
                                }
                                 @if (item.ChannelCatagroy == (int)Fx.Entity.ChannelCatagroy.FxHouseTrasnfer)
                                {
                                    <a class="btn btn-success" href="@FxUserCenter.AppSettings.HouseTransferLink(item.InfoId)">
                                        <i class="icon-zoom-in icon-white"></i>
                                        查看                                            
                                    </a>
                                    continue;
                                }
                               
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/span-->

</div>
